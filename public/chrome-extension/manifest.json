{
  "name": "DeskZen",
  "description": "Reduce workplace stress with quick, desk-friendly micro-break activities",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "notifications",
    "alarms",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}